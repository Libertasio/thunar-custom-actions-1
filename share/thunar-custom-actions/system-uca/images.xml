<?xml version="1.0" encoding="UTF-8"?>
<actions>
<action>
	<icon>edit-redo</icon>
	<name>im Uhrzeigersinn drehen</name>
	<command>for file in %F;do filetmp=$(dirname $file)/.$(basename ${file}).tmp;convert -rotate 90 $file $filetmp;cp $filetmp $file;rm $filetmp;done</command>
	<description>Markierte Bilder im Uhrzeigersinn drehen</description>
	<patterns>*</patterns>
	<image-files/>
</action>
<action>
	<icon>edit-undo</icon>
	<name>gegen den Uhrzeigersinn drehen</name>
	<command>for file in %F;do filetmp=$(dirname $file)/.$(basename ${file}).tmp;convert -rotate 270 $file $filetmp;cp $filetmp $file;rm $filetmp;done</command>
	<description>Markierte Bilder werden gegen den Uhrzeigersinn gedreht</description>
	<patterns>*</patterns>
	<image-files/>
</action>
<action>
	<icon>applications-graphics-symbolic</icon>
	<name>in Graustufen umwandeln</name>
	<command>for file in %F;do filetmp=$(dirname $file)/.$(basename ${file}).tmp;convert $file -set colorspace Gray -separate -average $filetmp;cp $filetmp $file;rm $filetmp;done</command>
	<description>arithmetische Mittelung aller Farbkanäle</description>
	<patterns>*</patterns>
	<startup-notify/>
	<image-files/>
</action>
<action>
	<icon>image-missing</icon>
	<name>Transparenz entfernen</name>
	<command>for file in %F;do filetmp=$(dirname $file)/.$(basename ${file}).tmp;convert $file -alpha off $filetmp;cp $filetmp $file;rm $filetmp;done</command>
	<description>Bei den ausgewählten Bildern wird der Alphakanal entfernt.</description>
	<patterns>*</patterns>
	<image-files/>
</action>
<action>
	<icon>window-restore-symbolic</icon>
	<name>Auflösung halbieren</name>
	<command>for file in %F;do filetmp=$(dirname $file)/.$(basename ${file}).tmp;convert $file -resize 50%% $filetmp;cp $filetmp $file;rm $filetmp;done</command>
	<description>Breite und Höhe der Bilder werden halbiert.</description>
	<patterns>*</patterns>
	<image-files/>
</action>
<action>
	<icon>window-restore-symbolic</icon>
	<name>Auflösung auf 75% reduzieren</name>
	<command>for file in %F;do filetmp=$(dirname $file)/.$(basename ${file}).tmp;convert $file -resize 75%% $filetmp;cp $filetmp $file;rm $filetmp;done</command>
	<description>Breite und Höhe der Bilder werden auf 75% reduziert.</description>
	<patterns>*</patterns>
	<image-files/>
</action>
</actions>

